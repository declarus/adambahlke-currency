<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @country.name %>
</p>

<p>
  <b>Code:</b>
  <%= @country.code %>
</p>

<p>
  <b>Status:</b>
  <%= MyCollection.find_by_user_id_and_country_id(current_user.id, @country.code).nil? ? 'Not Visited' : 'Visited' %>
</p>

<p>
  <b>Currencies:</b>
  <ul>
    <% @country.currencies.each do |currency| %>
      <li><%= link_to currency.name, currency %></li>
    <% end %>
  </ul>
</p>

<%= link_to 'Back', countries_path %>
