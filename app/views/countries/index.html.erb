<section>
  <div id="chart"></div>
  <%= render_chart @chart, 'chart' %>


  <div id="visited_countries_chart" class="simple_pie_chart" width='300px' height='100px'>
    <table>
      <tr>
        <th>Visited</th>
        <% usercollection = MyCollection.find_all_by_user_id(current_user.id).count %>
        <td><%= usercollection %></td>
      </tr><tr>
        <th>Not Visited</th>
        <td><%= (Country.all.count - usercollection).to_i %></td>
      </tr>
    </table>
  </div>

  <h1>Countries</h1>
  <div id="countries">
    <%= render 'country_list' %>
  </div>
</section>

